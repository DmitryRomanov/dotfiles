// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": {
    "mode": "system",
    "light": "Zedokai Light",
    "dark": "Gruvbox Dark"
  },

  "line_indicator_format": "short",
  "features": {
    // "inline_completion_provider": "none",
    "edit_prediction_provider": "none"
  },
  "debugger": {
    "dock": "left"
  },
  "show_completions_on_input": false,
  "relative_line_numbers": "enabled",
  "toolbar": {
    "breadcrumbs": true
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_project_items": true,
    "show_onboarding_banner": false,
    "show_user_picture": false,
    "show_sign_in": false,
    "show_menus": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "collaboration_panel": {
    "button": false
  },
  "disable_ai": true,
  "vim_mode": true,
  "base_keymap": "VSCode",
  // "buffer_font_family": "FiraCode Nerd Font Mono",
  "buffer_font_family": "CaskaydiaCove Nerd Font Mono",
  // "ui_font_family": "Iosevka Nerd Font Mono",
  "ui_font_size": 15,
  // "ui_font_weight": 50,
  "buffer_font_weight": 400,
  "buffer_line_height": "standard",
  // "buffer_font_family": "JetBrains Mono NL",
  "ui_font_family": "CaskaydiaCove Nerd Font Mono",
  "buffer_font_size": 18,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "font_size": 14,
    "alternate_scroll": "on",
    "line_height": "standard",
    "blinking": "on",
    "copy_on_select": true,
    "cursor_shape": "block",
    "keep_selection_on_copy": false,
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "languages": {
    "Dockerfile": {
      "format_on_save": "off"
    }
  },
  "file_types": {
    "Ansible": [
      "**.ansible.yml",
      "**.ansible.yaml",
      "**/defaults/*.yml",
      "**/defaults/*.yaml",
      "**/meta/*.yml",
      "**/meta/*.yaml",
      "**/tasks/*.yml",
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml",
      "**/group_vars/*.yml",
      "**/group_vars/*.yaml",
      "**/playbooks/*.yaml",
      "**/playbooks/*.yml",
      "**playbook*.yaml",
      "**playbook*.yml"
    ],
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml",
      "**/values*.yaml"
    ],
    "Terraform": ["**/*.nomad"]
  },
  "lsp": {
    "jsonnet-language-server": {
      "settings": {
        "resolve_paths_with_tanka": true
      }
    },
    "gopls": {
      "initialization_options": {
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    },
    "ansible-language-server": {
      "settings": {
        "ansible": {
          "path": "ansible"
        },
        "executionEnvironment": {
          "enabled": false
        },
        "python": {
          "interpreterPath": "python3"
        },
        "validation": {
          "enabled": true,
          // To enable linting, manually install ansible-lint and make sure it is your PATH
          "lint": {
            "enabled": true,
            "path": "ansible-lint"
          }
        }
      }
    },
    "python": {
      "enabled": false
    },
    "rust-analyzer": {
      "initialization_options": {
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        }
      },
      "completion": {
        "snippets": {
          "custom": {
            "Arc::new": {
              "postfix": "arc",
              "body": ["Arc::new(${receiver})"],
              "requires": "std::sync::Arc",
              "scope": "expr"
            },
            "Some": {
              "postfix": "some",
              "body": ["Some(${receiver})"],
              "scope": "expr"
            },
            "Ok": {
              "postfix": "ok",
              "body": ["Ok(${receiver})"],
              "scope": "expr"
            },
            "Rc::new": {
              "postfix": "rc",
              "body": ["Rc::new(${receiver})"],
              "requires": "std::rc::Rc",
              "scope": "expr"
            },
            "Box::pin": {
              "postfix": "boxpin",
              "body": ["Box::pin(${receiver})"],
              "requires": "std::boxed::Box",
              "scope": "expr"
            },
            "vec!": {
              "postfix": "vec",
              "body": ["vec![${receiver}]"],
              "description": "vec![]",
              "scope": "expr"
            }
          }
        }
      }
    }
  }
}
